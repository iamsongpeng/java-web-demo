// 根据 id 获取标签对象
function $(_id) {
	return document.getElementById(_id);
}

// 获取 xmlhttprequest
function getXmlHttpRequest() {
	var xmlhttp;
	
	if(window.XMLHttpRequest) {
		// ie7 及以上版本和其他浏览器
		xmlhttp = new XMLHttpRequest();
	} else {
		// ie7 以下
		xmlhttp = new ActiveXObject("Microsoft.XMLHTTP")
	}
	
	return xmlhttp;
}













